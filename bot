#!/bin/bash
# TTS Bot - 唯一管理脚本

cd "$(dirname "$0")"

case "$1" in
  start)
    sudo docker compose up -d --build
    echo "✅ 已启动"
    ;;
  stop)
    sudo docker compose down
    echo "✅ 已停止"
    ;;
  restart)
    sudo docker compose restart
    ;;
  logs)
    sudo docker compose logs -f
    ;;
  *)
    sudo docker compose ps
    ;;
esac
